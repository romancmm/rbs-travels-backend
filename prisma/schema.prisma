generator client {
  provider = "prisma-client-js"
  // output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(cuid())
  name      String
  email     String    @unique
  password  String
  role      String    @default("user")
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

    @@map("users") // optional, maps to lowercase "users" table

}

model Blog {
  id         String       @id @default(cuid())
  title      String
  slug       String       @unique
  content    String
  image      String?
  category   BlogCategory @relation(fields: [categoryId], references: [id])
  categoryId String
  createdAt  DateTime     @default(now())
}

model BlogCategory {
  id    String @id @default(cuid())
  name  String
  slug  String @unique
  blogs Blog[]
}

model Page {
  id         String   @id @default(cuid())
  title      String
  slug       String   @unique
  layoutData Json // <- For builder/drag-drop JSON structure
  published  Boolean  @default(false)
  createdAt  DateTime @default(now())
}
